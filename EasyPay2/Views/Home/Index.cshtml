@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <form style="margin-top:50px;" action="@Url.RouteUrl("Default", new { action = "Index", controller = "Home" })" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">orderGuid</label>
            <div class="col-sm-10">
                <input type="text" name="orderGuid" value="" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Amount</label>
            <div class="col-sm-10">
                <input type="text" name="Amount" value="" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">returnUrl</label>
            <div class="col-sm-10">
                <input type="text" name="returnUrl" value="@Url.RouteUrl("Default", new { action = "EasyPayResponse", controller = "Home", orderguid="test123" }, Request.Url.Scheme)" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">statusUrl</label>
            <div class="col-sm-10">
                <input type="text" name="statusUrl" value="@Url.RouteUrl("Default", new { action = "EasyPayStatusResponse", controller = "Home", string.Empty }, Request.Url.Scheme)" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>